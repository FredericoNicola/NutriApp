{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node", "jest"],
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  // Add this exclude so spec/test files aren't compiled in the Docker build
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
