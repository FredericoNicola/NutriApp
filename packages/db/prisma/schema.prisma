datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String   // NEW: hashed password for auth
  professionalCard String
  createdAt DateTime @default(now())
}

model Client{
  id Int @id @default(autoincrement())
  dateOfBirth DateTime
  name String
  email String
  ethnicity Ethnicity
  sex Sex
}

enum Ethnicity {
  CAUCASIAN
  AFRICAN
  ASIAN
}

enum Sex {
  MALE
  FEMALE
}